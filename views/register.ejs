<%- include("partials/header") %>

<section class="login">
  <h1 class="heading-1 login__heading">Create an account</h1>
  <form action="/register" method="POST" class="login__form">
    <label for="username" class="login__label">Username</label>
    <input
      type="text"
      id="username"
      name="username"
      class="login__input-username"
      placeholder="Username"
      required
    />
    <label for="password" class="login__label">Password</label>
    <input
      type="password"
      name="password"
      id="password"
      class="login__input-password"
      placeholder="Password"
      required
    />
    <button class="login__btn" type="submit">Create account</button>
  </form>
  <a href="/login" class="login__link">Already have an account? Log in here</a>
</section>

<%- include("partials/footer") %>
